{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "noEmit": true,
    "paths": {
      "@fixtures/*": ["./fixtures/*"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./utils/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report"
  ]
}
