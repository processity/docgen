{
  "name": "docgen",
  "version": "1.0.0",
  "description": "Salesforce PDF Generation Service - Node.js + TypeScript + Fastify + LibreOffice",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:lwc": "sfdx-lwc-jest",
    "test:lwc:watch": "sfdx-lwc-jest --watch",
    "test:lwc:coverage": "sfdx-lwc-jest --coverage",
    "test:all": "npm test && npm run test:lwc",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config e2e/playwright.config.ts",
    "test:e2e:headed": "playwright test --headed --config e2e/playwright.config.ts",
    "test:e2e:debug": "playwright test --debug --config e2e/playwright.config.ts",
    "test:e2e:report": "playwright show-report e2e/playwright-report",
    "e2e:setup": "./scripts/setup-scratch-org.sh",
    "e2e:teardown": "sf org delete scratch --no-prompt",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src test --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "salesforce",
    "pdf",
    "docx",
    "document-generation",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "fastify": "^4.25.2",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pino": "^8.17.2",
    "undici": "^7.16.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@salesforce/sfdx-lwc-jest": "^5.1.0",
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jose": "^5.10.0",
    "jsforce": "^3.10.8",
    "nock": "^13.5.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
